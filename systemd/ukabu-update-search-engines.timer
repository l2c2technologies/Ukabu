[Unit]
Description=UKABU Search Engine IP Daily Update Timer
Documentation=man:ukabu(8)

[Timer]
# Run daily at 3:05 AM (5 minutes after CDN updater)
OnCalendar=daily
OnCalendar=*-*-* 03:05:00
Persistent=true
RandomizedDelaySec=300

[Install]
WantedBy=timers.target
